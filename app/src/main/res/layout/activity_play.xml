<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/questionmark"
    tools:context=".LearnPlay">

    <TextView
        android:id="@+id/titlePlay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlePlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/amarante"
        android:gravity="center"
        android:text="Which game do you want to play?"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlePlay"
        app:layout_constraintVertical_bias="0.298" />

    <TextView
        android:id="@+id/titlePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/amarante"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlePlay2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="153dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/listening"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="30dp"
            android:background="#000000"
            android:fontFamily="@font/chivo"
            android:text="Listening"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/match"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/chivo"
            android:text="Match"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="#000000"

            android:textSize="24sp" />

        <Button
            android:id="@+id/spelling"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#000000"
            android:fontFamily="@font/chivo"
            android:text="Spelling"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>
</RelativeLayout>